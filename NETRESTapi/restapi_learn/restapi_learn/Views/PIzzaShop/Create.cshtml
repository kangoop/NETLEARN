@model PizzaShop;

@{
    ViewData["Title"] = "Pizza Create 🍕 ";
}


<h1>Pizza Create 🍕</h1>


<form method="post" asp-action="Create" asp-controller="PizzaShop">
    <div asp-validation-summary="All"></div>

    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Size" class="control-label"></label>
        <select asp-for="Size" class="form-control" id="PizzaSize">
            <option value="">-- Select Size --</option>
            <option value="Small">Small</option>
            <option value="Medium">Medium</option>
            <option value="Large">Large</option>
        </select>
    </div>
    <div class="form-group form-check">
        <label class="form-check-label">
            <input class="form-check-input" asp-for="IsGlutenFree" /> @Html.DisplayNameFor(model => model.IsGlutenFree)
        </label>
    </div>
    <div class="form-group">
        <label asp-for="Price" class="control-label"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>
